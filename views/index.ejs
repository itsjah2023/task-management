<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Task Manager</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  
  <h1>Task Manager</h1>
  <form action="/add-task" method="POST">
    <input type="text" name="title" placeholder="Task title - 3 to 100 words" required>
    <textarea name="description" placeholder="Task description - 3 to 500 words"></textarea>
    <button type="submit">Add Task</button>
  </form>

  <ul>
    <% tasks.forEach(task => { %>
      <li class="<%= task.completed ? 'completed' : '' %>">
        <strong><%= task.title %></strong>
        <p><%= task.description %></p>
        <form action="/toggle-task/<%= task.id %>" method="POST" style="display: inline;">
          <button type="submit"><%= task.completed ? 'Undo' : 'Complete' %></button>
        </form>
        <form action="/delete-task/<%= task.id %>" method="POST" style="display: inline;">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>
</body>
</html>